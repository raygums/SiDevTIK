# ===========================================
# SI Project TIK - Production Environment
# ===========================================

APP_NAME="SI Project TIK"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta

# IMPORTANT: Generate dengan `php artisan key:generate --show`
APP_KEY=

# URL aplikasi (sesuaikan dengan domain)
APP_URL=https://si-project-tik.example.com

# Port (default 80 untuk production)
APP_PORT=80

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=your-db-host
DB_PORT=5432
DB_DATABASE=si_project_tik
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password

# ===========================================
# Cache & Session
# ===========================================
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# ===========================================
# Redis (Optional - uncomment jika pakai Redis)
# ===========================================
# CACHE_STORE=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# ===========================================
# Mail Configuration (sesuaikan)
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"
